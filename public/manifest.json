{
  "name": "tab groups",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "tabGroups",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "collapseGroups": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "collapse inactive tab groups"
    },
    "openTabGroupSwitcher": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G"
      },
      "description": "open tab group switcher"
    }
  }
}
